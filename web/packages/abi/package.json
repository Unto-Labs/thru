{
  "name": "@thru/abi",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup && node ./scripts/copy-wasm.mjs",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "resolve-imports": "node ./scripts/resolve-imports.mjs",
    "wasm:bundler": "cd ../../../abi/abi_reflect_wasm && wasm-pack build --release --target bundler --out-dir pkg/bundler",
    "wasm:node": "cd ../../../abi/abi_reflect_wasm && wasm-pack build --release --target nodejs --out-dir pkg/node",
    "wasm:web": "cd ../../../abi/abi_reflect_wasm && wasm-pack build --release --target web --out-dir pkg/web",
    "wasm:sync": "node ./scripts/sync-wasm.mjs",
    "build:wasm": "pnpm run wasm:bundler && pnpm run wasm:node && pnpm run wasm:web && pnpm run wasm:sync"
  },
  "dependencies": {
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@thru/thru-sdk": "workspace:*",
    "@types/node": "^24.10.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
